{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "home-ec2-user-enviroments",
      "host": {
        "sourcePath": "/efs/environments"
      }
    },
    {
      "name": "postgres_volume",
      "host": {
        "sourcePath": "/efs/postgresql/data"
      }
    },
    {
      "name": "postgres_volume_backup",
      "host": {
        "sourcePath": "/efs/backups"
      }
    },
    {
      "name": "caddy_volume",
      "host": {
        "sourcePath": "/root/.caddy"
      }
    },
    {
      "name": "static_files",
      "host": {
        "sourcePath": "/static_files"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "redis",
      "hostname": "redis",
      "essential": false,
      "memoryReservation": 128,
      "command": ["sh", "-c", "redis-server --requirepass $REDIS_PASS"]
    },
    {
      "name": "broker",
      "image": "rabbitmq",
      "hostname": "broker",
      "essential": false,
      "memoryReservation": 128
    },
    {
      "name": "db",
      "image": "postgres",
      "hostname": "db",
      "essential": false,
      "memoryReservation": 56,
      "mountPoints": [
        {
          "sourceVolume": "postgres_volume",
          "containerPath": "/var/lib/postgresql/data"
        },
        {
          "sourceVolume": "postgres_volume_backup",
          "containerPath": "/backups"
        }
      ]
    },
    {
      "name": "api",
      "image": "mopitz/backend-app",
      "hostname": "api",
      "essential": false,
      "command": ["sh", "scripts/api_start_aws.sh"],
      "links": ["db", "redis", "broker"],
      "memoryReservation": 640,
      "portMappings": [
        {
          "containerPort": 9000,
          "hostPort": 9000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-enviroments",
          "containerPath": "/code/env",
          "readOnly": true
        }
      ]
    },
    {
      "name": "celery",
      "image": "mopitz/backend-app",
      "hostname": "celery",
      "essential": false,
      "command": ["sh", "scripts/celery_start_aws.sh"],
      "links": ["db", "redis", "broker"],
      "memoryReservation": 256,
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-enviroments",
          "containerPath": "/code/env",
          "readOnly": true
        }
      ]
    },
    {
      "name": "celery-beat",
      "image": "mopitz/backend-app",
      "hostname": "celery-beat",
      "essential": false,
      "command": ["sh", "scripts/celery_beat_start_aws.sh"],
      "links": ["db", "redis", "broker"],
      "memoryReservation": 256,
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-enviroments",
          "containerPath": "/code/env",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx",
      "image": "mopitz/backend-nginx",
      "hostname": "nginx",
      "essential": false,
      "memoryReservation": 56,
      "mountPoints": [
        {
          "sourceVolume": "static_files",
          "containerPath": "/static_files",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 8000
        }
      ],
      "links": ["api"]
    },
    {
      "name": "caddy",
      "image": "mopitz/backend-caddy",
      "memoryReservation": 56,
      "links": ["api"],
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "caddy_volume",
          "containerPath": "/root/.caddy"
        }
      ],
      "environment": [
        {
          "name": "ACME_AGREE",
          "value": "true"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        },
        {
          "containerPort": 443,
          "hostPort": 443
        }
      ]
    }
  ]
}