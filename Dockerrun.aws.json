{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "home-ec2-user-certs",
      "host": {
        "sourcePath": "/home/ec2-user/certs"
      }
    },
    {
      "name": "home-ec2-user-enviroments",
      "host": {
        "sourcePath": "/home/ec2-user/environments"
      }
    },
    {
      "name": "etc-nginx-vhost-d",
      "host": {
        "sourcePath": "/etc/nginx/vhost.d"
      }
    },
    {
      "name": "usr-share-nginx-html",
      "host": {
        "sourcePath": "/usr/share/nginx/html"
      }
    },
    {
      "name": "var-run-docker-sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    },
    {
      "name": "postgres_volume"
    },
    {
      "name": "postgres_volume_backup",
      "host": {
        "sourcePath": "/backup"
      }
    },
    {
      "name": "static_files",
      "host": {
        "sourcePath": "/static_files"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "redis",
      "essential": false,
      "memoryReservation": 256,
      "command": ["redis-server", "--requirepass", "${REDIS_PASS}"]
    },
    {
      "name": "broker",
      "image": "rabbitmq",
      "essential": false,
      "memoryReservation": 256
    },
    {
      "name": "db",
      "image": "postgres",
      "essential": false,
      "memoryReservation": 512,
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "${DATABASE_HOST}"
        },
        {
          "name": "POSTGRES_USER",
          "value": "${DATABASE_USER}"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${DATABASE_PASSWORD}"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "postgres_volume",
          "containerPath": "/var/lib/postgresql/data"
        },
        {
          "sourceVolume": "postgres_volume_backup",
          "containerPath": "/backups"
        }
      ]
    },
    {
      "name": "api",
      "image": "mopitz/backend-app",
      "essential": true,
      "command": ["sh", "scripts/api_start_aws.sh"],
      "links": ["db", "redis"],
      "memoryReservation": 2048,
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-enviroments",
          "containerPath": "/code/env",
          "readOnly": true
        }
      ],
      "environment": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_DEFAULT_REGION}"
        }
      ]
    },
    {
      "name": "celery",
      "image": "mopitz/backend-app",
      "essential": false,
      "command": ["celery", "-A", "economic_system", "worker"],
      "links": ["db", "redis", "broker"],
      "memoryReservation": 2048,
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-enviroments",
          "containerPath": "/code/env",
          "readOnly": true
        }
      ],
      "environment": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_DEFAULT_REGION}"
        }
      ]
    }
  ]
}