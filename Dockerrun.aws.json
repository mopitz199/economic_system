{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "home-ec2-user-certs",
      "host": {
        "sourcePath": "/home/ec2-user/certs"
      }
    },
    {
      "name": "home-ec2-user-enviroments",
      "host": {
        "sourcePath": "/home/ec2-user/environments"
      }
    },
    {
      "name": "etc-nginx-vhost-d",
      "host": {
        "sourcePath": "/etc/nginx/vhost.d"
      }
    },
    {
      "name": "usr-share-nginx-html",
      "host": {
        "sourcePath": "/usr/share/nginx/html"
      }
    },
    {
      "name": "var-run-docker-sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    },
    {
      "name": "postgres_volume"
    },
    {
      "name": "postgres_volume_backup",
      "host": {
        "sourcePath": "/backup"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "redis",
      "essential": false,
      "memoryReservation": 256,
      "command": ["redis-server", "--requirepass", "${REDIS_PASS}"]
    },
    {
      "name": "db",
      "image": "postgres",
      "essential": false,
      "memoryReservation": 256,
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "${DATABASE_HOST}"
        },
        {
          "name": "POSTGRES_USER",
          "value": "${DATABASE_USER}"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${DATABASE_PASSWORD}"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "postgres_volume",
          "containerPath": "/var/lib/postgresql/data"
        },
        {
          "sourceVolume": "postgres_volume_backup",
          "containerPath": "/backups"
        }
      ]
    },
    {
      "name": "api",
      "image": "mopitz/backend-app",
      "essential": true,
      "command": ["gunicorn", "-w", "4" ,"economic_system.wsgi", "-b", "0.0.0.0:9000", "--timeout", "1500", "--graceful-timeout", "1500", "--access-logfile", "/var/log/gunicorn-access.log", "--error-logfile", "/var/log/gunicorn-error.log"],
      "links": ["db", "redis"],
      "memoryReservation": 1056,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 9000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-enviroments",
          "containerPath": "/code/environments",
          "readOnly": true
        }
      ],
      "environment": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_DEFAULT_REGION}"
        }
      ]
    }
  ]
}